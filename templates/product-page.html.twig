{% extends "base.html.twig" %}

{% block body %}

{% include "_partials/header.html.twig" %}

<section class="product-page">
    <div class="container mt-2 mb-3">
        <div class="row no-gutters">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">La collection</li>
                        <li class="breadcrumb-item">Location Voiture Rouen </li>
                        <li class="breadcrumb-item">Location PORSCHE  </li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="#">{{ car.title }} </a> </li>

                    </ol>
                </nav>
            </div>
            <div class="col-md-6 pr-2">
                <div class="card">
                    <div class="lightSlider-galary">
                        <div class="tagdiv position-absolute start-0">Nouveauté</div>
                        <div class="position-absolute end-0 heart"><i class="fa fa-heart">&#xf004;</i></div>

                        <ul id="lightSlider">
                            {% for image in car.images %}
                                <li data-thumb="{{ image }}">
                                    <img src="{{ image }}" alt="Image {{ loop.index }}">
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="d-flex flex-row align-items-center">
                        <div class="product-description">

                            <div class="p-ratings">
                                <img src="{{ asset('images/Flux%201%20Groupe%202479.svg') }}" alt="etoile"> 4,5 <a class="ratins" href="#">20 avis</a>
                            </div>
                            <h2>{{ car.title }}</h2>
                            <p class="chevaux">{{ car.year }} • {{ car.ch }} • {{ car.kilometers }}</p>
                            <h3>{{ car.price }} <small>{{ car.type }}</small></h3>
                            <p class="Porsche-content">{{ car.description|raw }}</p>
                            <ul class="securise">
                                <li ><img src="{{ asset('images/Groupe12482.svg') }}" alt="" class="img-payment"> Paiement sécurisé</li>
                                <li><img src="{{ asset('images/Groupe2a2763.svg') }}" alt="" class="img-payment"> Sélection validée par nos équipes</li>
                            </ul>
                            <a href="{{ car.link }}"> Je la loue dès maintenant → </a>

                            <div class="Son-histoire-expand">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingTwo">
                                        <a style="border: none; background-color:transparent" href="#history">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Son histoire
                                            </button>
                                        </a>
                                    </h2>

                                </div>
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingThree">
                                        <a style="border: none; background-color:transparent" href="#technic">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                            Caractéristiques techniques
                                        </button>
                                        </a>
                                    </h2>
                                </div>
                            </div>



                            <ul class="securise">
                                <li><img src="{{ asset('images/Groupe2491.svg') }}"> Poser une question</li>
                                <li><img src="{{ asset('images/Groupe02492.svg') }}"> Partager</li>
                            </ul>
                        </div>

                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="Son-histoire">
    <div class="container mt-2 mb-3">
        <div class="row no-gutters">
            <div class="col-md-6 pr-2">
                <div class="d-flex flex-row align-items-left">
                    <div class="Son-histoire-content" id="history">
                        <h3>Son histoire</h3>
                        {{ car.history|raw }}
                     <a href="{{ car.link }}"> Je la loue dès maintenant → </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="flex-row align-items-left">
                    <div class="Son-histoire-table" id="technic">
                        <h3>Caractéristiques techniques</h3>
                        <table class="table table-striped">
                            <tr><td>Année</td><td>{{ car.year }}</td></tr>
                            <tr><td>Kilométrage</td><td>{{ car.kilometers }}</td></tr>
                            <tr><td>Carrosserie</td><td>{{ car.carbody }}</td></tr>
                            <tr><td>Puissance</td><td>{{ car.ch }}</td></tr>
                            <tr><td>Moteur</td><td>{{ car.motor }}</td></tr>
                            <tr><td>Transmission</td><td>{{ car.transmission }}</td></tr>
                            <tr><td>Boîte de vitesse</td><td>{{ car.gearbox }}</td></tr>
                            <tr><td>Places</td><td>{{ car.place }}</td></tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
